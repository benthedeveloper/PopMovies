<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Style for Movie Title Toolbar -->
    <style name="MovieTitleToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#009688</item>
        <item name="android:paddingTop">28dp</item>
        <item name="android:paddingBottom">28dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Style for TextView inside Movie Title Toolbar -->
    <style name="MovieTitleToolbar.TextView">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textIsSelectable">false</item>
    </style>

</resources>
